@model BeSpokedBikes.Application.Models.ProductModel
@{
}

@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { id = "product-form", @class = "ui form" }))
{
    @Html.HiddenFor(m => m.ProductId)

    <div class="ui field">
        @Html.LabelFor(m => m.Name)@Html.TextBoxFor(m => m.Name)
    </div>
    <div class="ui field">
        @Html.LabelFor(m => m.Manufacturer)@Html.TextBoxFor(m => m.Manufacturer)
    </div>

    <div class="ui field">
        @Html.LabelFor(m => m.Style)@Html.TextBoxFor(m => m.Style)
    </div>

    <div class="ui field">
        @Html.LabelFor(m => m.SalePrice)@Html.TextBoxFor(m => m.SalePrice,new { @class = "input-mask" } )
    </div>

    <div class="ui field">
        @Html.LabelFor(m => m.PurchasePrice)@Html.TextBoxFor(m => m.PurchasePrice, new { @class = "input-mask" } )
    </div>

    <div class="ui field">
        @Html.LabelFor(m => m.CommissionPercentage)@Html.TextBoxFor(m => m.CommissionPercentage,  new { @class = "input-mask" } )
    </div>

    <div class="ui field">
        @Html.LabelFor(m => m.Quantity)@Html.TextBoxFor(m => m.Quantity)
    </div>

}