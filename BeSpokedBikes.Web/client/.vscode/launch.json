    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}/src"
        },
        {
            "name": "Customer .NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processName": "BeSpokedBikes.Web.exe"
        },
        {
            "type": "edge",
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceRoot}/client/src"
        }
    ]
}